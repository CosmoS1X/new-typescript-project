{
  "name": "new-typescript-project",
  "version": "0.1.0",
  "description": "New Typescript Project Template",
  "main": "dist/server/index.js",
  "type": "commonjs",
  "bin": {
    "task-manager": "dist/bin/index.js"
  },
  "scripts": {
    "test": "jest",
    "type-check": "tsc --noEmit -p server/tsconfig.json && tsc --noEmit -p src/tsconfig.json && tsc --noEmit -p bin/tsconfig.json",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "client": "webpack serve",
    "server": "DEBUG=server:* nodemon --exec ts-node bin/index.ts",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "clean": "rm -rf dist",
    "build:client": "webpack",
    "build:server": "tsc -p server/tsconfig.json",
    "build:bin": "tsc -p bin/tsconfig.json",
    "build": "npm run clean && npm run build:bin && npm run build:client",
    "start": "DEBUG=* node dist/bin/index.js"
  },
  "jest": {
    "preset": "ts-jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CosmoS1X/new-typescript-project.git"
  },
  "author": "Konstantin Korovin <cosmo.stan@yandex.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/CosmoS1X/new-typescript-project/issues"
  },
  "homepage": "https://github.com/CosmoS1X/new-typescript-project#readme",
  "dependencies": {
    "axios": "^1.9.0",
    "body-parser": "^2.2.0",
    "bootstrap": "^5.3.5",
    "bootstrap-icons": "^1.11.3",
    "cors": "^2.8.5",
    "debug": "^4.4.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.27.0",
    "@types/axios": "^0.9.36",
    "@types/bootstrap": "^5.2.10",
    "@types/cors": "^2.8.17",
    "@types/debug": "^4.1.12",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "babel-loader": "^10.0.0",
    "concurrently": "^9.1.2",
    "css-loader": "^7.1.2",
    "eslint": "^8.57.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "html-webpack-plugin": "^5.6.3",
    "jest": "^29.7.0",
    "mini-css-extract-plugin": "^2.9.2",
    "nodemon": "^3.1.10",
    "sass": "^1.87.0",
    "sass-loader": "^16.0.5",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "webpack": "^5.99.6",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.1"
  }
}
