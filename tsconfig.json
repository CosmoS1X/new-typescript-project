{
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "target": "ES5",
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@server/*": ["./server/*"]
    }
  },
  "exclude": ["*.test.ts"]
}
